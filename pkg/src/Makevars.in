
# set by configure
GSL_CFLAGS = @GSL_CFLAGS@ -DHAVE_INLINE -DGSL_RANGE_CHECK_ON -DPRINT_TO_CONSOLE -g3 -I$(R_HOME)/library/bigmemory/include/ -I$(R_HOME)/library/BH/include/
GSL_LIBS   = @GSL_LIBS@
RCPP_LDFLAGS = @RCPP_LDFLAGS@

# combine with standard arguments for R
PKG_CPPFLAGS = $(GSL_CFLAGS) $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(GSL_LIBS) $(RCPP_LDFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CXXFLAGS) -lboost_iostreams
