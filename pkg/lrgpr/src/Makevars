
# set by configure
GSL_CFLAGS = -I/usr/local/include -DHAVE_INLINE -DGSL_RANGE_CHECK_ON -g3 
GSL_LIBS   = -L/usr/local/lib -lgsl -lgslcblas -lm
RCPP_LDFLAGS = -L/usr/local/lib/R/library/Rcpp/lib -lRcpp -Wl,-rpath,/usr/local/lib/R/library/Rcpp/lib 
BIGMEMORY_IFLAGS = -I/usr/local/lib/R/library/bigmemory/include
BH_IFLAGS = -I/usr/local/lib/R/library/BH/include

# combine with standard arguments for R
PKG_CPPFLAGS = $(GSL_CFLAGS) $(BIGMEMORY_IFLAGS) $(BH_IFLAGS) $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(GSL_LIBS) $(RCPP_LDFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CXXFLAGS) -lboost_iostreams
